@model Pharmacie.Models.OrdonnanceModel
<div id="status"></div>
@using(Html.BeginUmbracoForm<Pharmacie.Controller.OrdonnanceController>("SendMail"))
{
    @Html.EditorFor(x => Model)
	<span>Scan de votre ordonnance</span><br />
	<input type="file" name="file" id="file" />
	<br /><br />
    <input type="submit"/>
}
 
<script>
    function ShowError() {
        $("#status").removeClass();
        $("#status").addClass("alert alert-error");
        $("#status").html("<strong>Error!</strong> There was an error posting the contact form. Please try again later.");
    }
 
    function ShowSuccess() {
        $("#target").removeClass();
        $("#target").addClass("alert alert-success");
    }
</script>